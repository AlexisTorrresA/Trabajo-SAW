#Query 1 
#Sistemas operativos y Dependencias
#defaultView:Graph
SELECT distinct
?p ?pLabel 
?q ?qLabel
?pic ?fechacreacion
WHERE
{
  ?p wdt:P31 wd:Q9135.
    ?p  wdt:P144 ?q  .   # SO vinculado a otro SO    
   OPTIONAL {
         ?p  wdt:P279+ wd:Q9135 .   # SO
     ?p wdt:P571 ?fechacreacion.
    ?p wdt:P18 ?pic .
    }
     SERVICE wikibase:label { bd:serviceParam wikibase:language "[AUTO_LANGUAGE],es"}.  #idiomas
}

